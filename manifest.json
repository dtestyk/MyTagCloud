{
  "name": "MyTagCloud",
  "description": "Tag attachment and navigation.",
  "version": "0.1",
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "MyTagCloud.js",
        "runMyTagCloud.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "background": {
    "scripts": ["background.js","runBackground.js"],
    "persistent": true
  }
}
